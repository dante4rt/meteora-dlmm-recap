---
import { getCollection } from 'astro:content';
import DocsLayout from '../layouts/DocsLayout.astro';

const notes = await getCollection('notes');
const sorted = notes.sort((a, b) => (a.data.day ?? 0) - (b.data.day ?? 0));
---

<DocsLayout title="Meteora DLMM Recap">
  <h1>Meteora DLMM Recap</h1>
  <p>Study notes from Meteora DLMM bootcamp sessions.</p>

  <div class="day-grid">
    {sorted.map((entry) => (
      <a href={`/${entry.id}/`} class="day-card">
        <h2>{entry.data.title}</h2>
        {entry.data.description && <p>{entry.data.description}</p>}
        {entry.data.date && (
          <time datetime={entry.data.date.toISOString()}>
            {entry.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        )}
      </a>
    ))}
  </div>
</DocsLayout>

<style>
  .day-grid {
    display: grid;
    gap: 16px;
    margin-top: 24px;
  }

  .day-card {
    display: block;
    padding: 20px 24px;
    border: 1px solid var(--spectrum-gray-200);
    border-radius: 8px;
    text-decoration: none;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
  }

  .day-card:hover {
    border-color: var(--spectrum-accent-color-700, var(--spectrum-blue-600));
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .day-card h2 {
    margin: 0 0 8px;
    font-size: 20px;
    border: none;
    padding: 0;
  }

  .day-card p {
    margin: 0 0 8px;
    font-size: 14px;
    color: var(--spectrum-gray-700);
  }

  .day-card time {
    font-size: 13px;
    color: var(--spectrum-gray-500);
  }

  :global(.spectrum--darkest) .day-card {
    border-color: var(--spectrum-gray-600, #444);
  }

  :global(.spectrum--darkest) .day-card:hover {
    border-color: var(--spectrum-accent-color-500, #5dadec);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  :global(.spectrum--darkest) .day-card p {
    color: var(--spectrum-gray-400);
  }

  :global(.spectrum--darkest) .day-card time {
    color: var(--spectrum-gray-500);
  }
</style>
